@model Domain.DTOs.RestaurantCreateDto

<h2 class="mb-4">Ajouter un Restaurant</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group mb-3">
        <label asp-for="Nom" class="form-label">Nom du restaurant</label>
        <input asp-for="Nom" class="form-control" placeholder="Entrez le nom du restaurant" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Adresse" class="form-label">Adresse</label>
        <input asp-for="Adresse" class="form-control" placeholder="Entrez l'adresse du restaurant" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Cuisine" class="form-label">Cuisine</label>
        <input asp-for="Cuisine" class="form-control" placeholder="Type de cuisine" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Note" class="form-label">Note</label>
        <input asp-for="Note" type="number" class="form-control" placeholder="Donnez une note (1-5)" min="1" max="5" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Image" class="form-label">Image du restaurant</label>
        <input asp-for="Image" type="file" class="form-control" />
    </div>

    <div class="d-flex justify-content-between align-items-center mt-4">
        <button type="submit" class="btn btn-primary">Ajouter</button>
        <a href="@Url.Action("Index", "Restaurants")" class="btn btn-secondary">Retour</a>
    </div>
</form>

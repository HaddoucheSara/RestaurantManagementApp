@model Domain.DTOs.RestaurantDto

<h2 class="mb-4">Supprimer un Restaurant</h2>
<p class="mb-4">Es-tu sûr de vouloir supprimer le restaurant suivant ?</p>

<dl class="row mb-4">
    <dt class="col-sm-3">Nom</dt>
    <dd class="col-sm-9">@Model.Nom</dd>

    <dt class="col-sm-3">Adresse</dt>
    <dd class="col-sm-9">@Model.Adresse</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-danger">Supprimer</button>
        <a asp-action="Index" class="btn btn-secondary">Annuler</a>
    </div>
</form>

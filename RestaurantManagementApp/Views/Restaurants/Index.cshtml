@model List<Domain.DTOs.RestaurantDto>

<h2 class="mb-4">Liste des Restaurants</h2>

<p>
    <a asp-action="Create" class="btn btn-primary" asp-route-cuisine="@ViewData["Cuisine"]">Ajouter un restaurant</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-warning">
        Aucun restaurant trouvé.
    </div>
}
else
{
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Cuisine</th>
                <th>Note</th>
                <th>Actions</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nom</td>
                    <td>@item.Adresse</td>
                    <td>@item.Cuisine</td>
                    <td>@item.Note</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Voir</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Modifier</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Supprimer</a>
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ImagePath))
                        {
                            <img src="@item.ImagePath" class="img-thumbnail" width="100" />
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
